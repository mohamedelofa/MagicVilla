@model IEnumerable<GetVillaDto>

<div class="container p-3 border shadow mt-5">
	<div class="row p-4">
		<div class="col">
			<h2 class="text-info">
				Villa List
			</h2>
		</div>
		<div class="text-end col">
			<a class="btn btn-outline-primary fs-5" asp-controller="Villa" asp-action="Create"><i class="bi bi-plus-circle-fill pe-2"></i> Create new Villa</a>
		</div>
	</div>
	<table class="table table-bordered table-hover table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Occupancy</th>
				<th>Price</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var villa in Model)
			{
				<tr>
					<td>@villa.Name</td>
					<td>@villa.Occupancy</td>
					<td>@(villa.Rate.ToString("c"))</td>
					<td class="d-flex justify-content-around">
						<a class="btn btn-outline-success"asp-controller="Villa" asp-action="Update" asp-route-id="@villa.Id"><i class="bi bi-pencil-square pe-2"></i>Edit Villa</a>
						<a class="btn btn-outline-danger" asp-controller="Villa" asp-action="Delete" asp-route-id="@villa.Id"><i class="bi bi-trash-fill pe-2"></i>Delete Villa</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>