@model GetVillaNumberDto

<div class="container border shadow mt-5 p-3">
	<div class="text-center p-3">
		<h2 class="text-info">Delete Villa Number</h2>
	</div>
	<div>
		<form asp-action="Delete" asp-route-id="@Model.VillaNo" method="post" class="row">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-3 row">
				<div class="col-2">
					<label asp-for="VillaNo"></label>
				</div>
				<div class="col-10">
					<input disabled asp-for="VillaNo" class="form-control" />
				</div>
			</div>


			<div class="mb-3 row">
				<div class="col-2">
					<label asp-for="VillaId"></label>
				</div>
				<div class="col-10">
					<input disabled  class="form-control" value="@Model.Villa?.Name" />
				</div>
			</div>


			<div class="mb-3 row">
				<div class="col-2">
					<label asp-for="SpecialDetails"></label>
				</div>
				<div class="col-10">
					<textarea disabled asp-for="SpecialDetails" class="form-control"></textarea>
				</div>
			</div>



			<div class="row justify-content-between">
				<div class="col-4 offset-2">
					<input type="submit" class="btn btn-primary form-control" value="Delete" />
				</div>
				<div class="col-4">
					<a class="btn btn-outline-warning form-control" asp-action="index">Back To List</a>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


