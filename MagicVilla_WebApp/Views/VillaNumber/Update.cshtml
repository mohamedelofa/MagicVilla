@model UpdateVillaNumberViewModel

@{
	SelectList lst = new SelectList(Model.Villas, "Id", "Name");
}

<div class="container border shadow mt-5 p-3">
	<div class="text-center p-3">
		<h2 class="text-info">Update Villa Number</h2>
	</div>
	<div>
		<form asp-action="Update" asp-route-id="@Model.VillaNo" method="post" class="row">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-3 row">
				<div class="col-2">
					<label asp-for="VillaId"></label>
				</div>
				<div class="col-10">
					<select asp-for="VillaId" asp-items="lst" class="form-select">
					</select>
					<span asp-validation-for="VillaId" class="text-danger"></span>
				</div>
			</div>


			<div class="mb-3 row">
				<div class="col-2">
					<label asp-for="SpecialDetails"></label>
				</div>
				<div class="col-10">
					<textarea asp-for="SpecialDetails" class="form-control"></textarea>
					<span asp-validation-for="SpecialDetails" class="text-danger"></span>
				</div>
			</div>



			<div class="row justify-content-between">
				<div class="col-4 offset-2">
					<input type="submit" class="btn btn-primary form-control" value="Submit" />
				</div>
				<div class="col-4">
					<a class="btn btn-outline-warning form-control" asp-action="index">Back To List</a>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

